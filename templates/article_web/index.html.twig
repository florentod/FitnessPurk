{% extends 'base.html.twig' %}

{% block title %}ArticleWeb index{% endblock %}

{% block body %}
    <h1>ArticleWeb index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomArticle</th>
                <th>Theme</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article_web in article_webs %}
            <tr>
                <td>{{ article_web.id }}</td>
                <td>{{ article_web.nomArticle }}</td>
                <td>{{ article_web.theme }}</td>
                <td>
                    <a href="{{ path('article_web_show', {'id': article_web.id}) }}">show</a>
                    <a href="{{ path('article_web_edit', {'id': article_web.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_web_new') }}">Create new</a>
{% endblock %}
