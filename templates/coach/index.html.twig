{% extends 'base.html.twig' %}

{% block title %}Coach index{% endblock %}

{% block body %}
    <h1>Coach index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomCoach</th>
                <th>PrenomCoach</th>
                <th>ClubCoach</th>
                <th>PhotoCoach</th>
                <th>TelCoach</th>
                <th>Discipline</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coach in coaches %}
            <tr>
                <td>{{ coach.id }}</td>
                <td>{{ coach.nomCoach }}</td>
                <td>{{ coach.prenomCoach }}</td>
                <td>{{ coach.clubCoach }}</td>
                <td>{{ coach.photoCoach }}</td>
                <td>{{ coach.telCoach }}</td>
                <td>{{ coach.discipline }}</td>
                <td>
                    <a href="{{ path('coach_show', {'id': coach.id}) }}">show</a>
                    <a href="{{ path('coach_edit', {'id': coach.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('coach_new') }}">Create new</a>
{% endblock %}
